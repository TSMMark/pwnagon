<%= form_for(@deck) do |f| %>
  <% if @deck.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@deck.errors.count, "error") %> prohibited this deck from being saved:</h4>

      <ul>
      <% @deck.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col s12">
      <div class="input-field">
        <%= f.text_field(:name) %>
        <%= f.label(:name) %>
      </div>
    </div>

    <div class="col s12">
      <div class="input-field">
        <%= f.select :card_ids, Card.all.pluck(:name, :id), {}, multiple: true %>
        <%= f.label(:card_ids, "Cards") %>
      </div>
    </div>

    <div class="col s12">
      <%= f.submit class: "btn" %>
    </div>
  </div>
<% end %>
