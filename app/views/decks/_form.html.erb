<%= form_for(@deck) do |f| %>
  <%= f.hidden_field :hero_id %>

  <div class="parallax-container full-page">
    <div class="parallax">
      <%= image_tag @deck.hero.banner.url %>
    </div>
  </div>

  <div class="container parallax-overlap">
    <h1><%= action %> <%= @deck.hero.name %> Deck</h1>

    <% if @deck.errors.any? %>
      <div id="error_explanation">
        <h4><%= pluralize(@deck.errors.count, "error") %> prohibited this deck from being saved:</h4>

        <ul>
        <% @deck.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="card">
      <div class="card-content">
        <span class="card-title">Basic Info</span>

        <div class="input-field">
          <%= f.text_field(:name) %>
          <%= f.label(:name) %>
        </div>

        <div class="input-field">
          <%= f.text_area(:description, class: "materialize-textarea") %>
          <%= f.label(:description) %>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <%= react_component("Controllers.DeckEditor",
          # TODO: remove this if unused.
          name: @deck.name,

          # TODO: Show only cards avail to current hero.
          cards: Card.all,
          selectedCardsIds: @deck.slots.map(&:card_id),
          cancelURL: @deck.persisted? ? deck_path(@deck) : decks_path) %>
  </div>
<% end %>
