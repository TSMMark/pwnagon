<%= form_for(@card) do |f| %>
  <% if @card.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@card.errors.count, "error") %> prohibited this card from being saved:</h4>

      <ul>
      <% @card.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col s12">
      <div class="input-field">
        <%= f.text_field(:name) %>
        <%= f.label(:name) %>
      </div>
    </div>

    <div class="col s12">
      <div class="input-field">
        <%= f.number_field(:cost) %>
        <%= f.label(:cost) %>
      </div>
    </div>

    <div class="col s12">
      <div class="input-field">
        <%= f.select(:affinity, [["-- Choose Affinity --", ""], "white", "blue", "black", "red"]) %>
        <%= f.label(:affinity) %>
      </div>
    </div>

    <div class="col s12">
      <%= f.submit class: "btn" %>
    </div>
  </div>
<% end %>
