<div class="container">
  <div class="row">
    <div class="col s12 m6 offset-m3">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <div class="card devise-form-card">
          <div class="card-content">
            <span class="card-title">Change your password</span>

            <%= devise_error_messages! %>
            <%= f.hidden_field :reset_password_token %>

            <div class="input-field">
              <%= f.password_field :password, autofocus: true, autocomplete: "off" %>
              <%= f.label :password do %>
                New password
                <% if @minimum_password_length %>
                  <small>(<%= @minimum_password_length %> characters minimum)</small>
                <% end %>
              <% end %>
            </div>

            <div class="input-field">
              <%= f.password_field :password_confirmation, autocomplete: "off" %>
              <%= f.label :password_confirmation, "Confirm new password" %><br />
            </div>
          </div>

          <div class="card-action">
            <%= f.submit "Change my password", class: "btn" %>
            <%= link_to "Back", :back, class: "btn-flat btn-back" %>
          </div>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
