<% if current_page.last? %>
  <li class="disabled">
    <%= content_tag :a do %>
      <i class="material-icons">chevron_right</i>
    <% end %>
  </li>
<% else %>
  <li class="waves-effect">
    <% custom_url = defined?(url_hash) ? "#{url}##{url_hash}" : url %>
    <%= link_to custom_url, :rel => 'next', :remote => remote do %>
      <i class="material-icons">chevron_right</i>
    <% end %>
  </li>
<% end %>
